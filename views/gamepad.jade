html
	head
		title Controller
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		link(href="/assets/css/screen.css", rel="stylesheet", media="screen")

	body
		.navbar
			.navbar-inner
				.brand Collision
				.navbar-text
					#status.label offline

		.well.span4.offset4
			input#login.input-xlarge(type='text', placeholder="Your name...")
			button#signin.btn.btn-primary.btn-large Play the game

		#gamepad.btn-group
			a.btn.btn-large(data-move='left')
				i.icon-chevron-left
			a.btn.btn-large(data-move='right')
				i.icon-chevron-right


		script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js')
		script(src='/socket.io/socket.io.js')
		script
			window.config = {
				"host" : "#{host}",
				"code" : "#{code}",
			}
		script(src='/assets/js/gamepad.js')
